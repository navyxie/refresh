<?xml version="1.0" encoding="UTF-8" ?>
<plugin xmlns="http://phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="org.apache.cordova.refresh"
    version="1.0.0">
  <engines>
    <engine name="cordova" version=">=2.2.0" />
  </engines>

  <name>Quick Refresh</name>

  <platform name="android">
    <source-file src="src/android/RefreshPlugin.java" target-dir="src/org/apache/cordova/plugin" />
    <source-file src="src/android/refresh.xml" target-dir="res/menu" />
    <source-file src="src/android/drawable-hdpi/ic_menu_refresh.png" target-dir="res/drawable-hdpi" />
    <source-file src="src/android/drawable-mdpi/ic_menu_refresh.png" target-dir="res/drawable-mdpi" />
    <source-file src="src/android/drawable-ldpi/ic_menu_refresh.png" target-dir="res/drawable-ldpi" />

    <config-file target="res/xml/config.xml" parent="/cordova/plugins">
      <plugin name="Refresh" value="org.apache.cordova.plugin.RefreshPlugin" />
    </config-file>
  </platform>

  <!--
  <platform name="ios">
  </platform>
  -->
</plugin>
